{
  "name": "nest-template",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "token-create:dev": "sucrase-node utils/token-creator.ts --env=development",
    "token-create:staging": "sucrase-node utils/token-creator.ts --env=staging",
    "token-create:prod": "sucrase-node utils/token-creator.ts --env=production",
    "prepare": "husky install"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^7.6.12",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.12",
    "@nestjs/event-emitter": "^0.0.3",
    "@nestjs/mapped-types": "^0.4.0",
    "@nestjs/platform-express": "^7.6.12",
    "@nestjs/swagger": "^4.7.16",
    "@nestjs/typeorm": "^8.0.4",
    "@types/bcrypt": "^5.0.0",
    "@types/hapi__joi": "^17.1.8",
    "bcrypt": "^5.0.1",
    "class-transformer": "0.4.0",
    "class-validator": "^0.13.1",
    "dinero.js": "^1.8.1",
    "luxon": "^1.26.0",
    "nanoid": "^3.1.22",
    "nanoid-dictionary": "^4.2.0",
    "nanoid-good": "^3.1.0",
    "nest-winston": "^1.4.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7",
    "slugify": "^1.4.7",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.36",
    "winston": "^3.3.3",
    "winston-cloudwatch": "^2.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@nestjs/cli": "^7.5.6",
    "@nestjs/schematics": "^7.2.7",
    "@nestjs/testing": "^7.6.12",
    "@types/dinero.js": "^1.6.5",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/luxon": "^1.26.3",
    "@types/node": "^14.14.31",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "casual": "^1.6.2",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "prettier": "^2.2.1",
    "sucrase": "^3.20.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.2",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*ts": [
      "eslint --fix"
    ]
  }
}
